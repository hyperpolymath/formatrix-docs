{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@formatrix/ui",
  "version": "0.1.0",
  "imports": {
    "@tauri-apps/api/": "npm:@tauri-apps/api@2/",
    "@tauri-apps/plugin-dialog": "npm:@tauri-apps/plugin-dialog@2/",
    "@tauri-apps/plugin-fs": "npm:@tauri-apps/plugin-fs@2/",
    "codemirror": "npm:codemirror@6/",
    "@codemirror/view": "npm:@codemirror/view@6/",
    "@codemirror/state": "npm:@codemirror/state@6/",
    "@codemirror/lang-markdown": "npm:@codemirror/lang-markdown@6/",
    "@codemirror/theme-one-dark": "npm:@codemirror/theme-one-dark@6/",
    "react": "npm:react@19/",
    "react-dom": "npm:react-dom@19/",
    "force-graph": "npm:force-graph@1/"
  },
  "tasks": {
    "build:res": "rescript build",
    "watch:res": "rescript build -w",
    "dev": "deno task watch:res & cd ../crates/formatrix-gui && cargo tauri dev",
    "build": "deno task build:res && cd ../crates/formatrix-gui && cargo tauri build",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "clean": "rm -rf lib"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  }
}
