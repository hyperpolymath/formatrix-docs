# EditorConfig: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{rs,res}]
indent_size = 4

[*.{adb,ads}]
indent_size = 3

[*.{js,ts,json,yaml,yml,toml}]
indent_size = 2

[*.{scm,ncl}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.adoc]
indent_size = 2

[Makefile]
indent_style = tab

[justfile]
indent_style = space
indent_size = 4
